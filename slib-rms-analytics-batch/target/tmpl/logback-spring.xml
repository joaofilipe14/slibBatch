<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<appender name="application" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file><<app-tile-log-dir>>/<<app-tile-app-id>>.log</file>
		<encoder>
			<pattern>%d [%thread] %-5level %-50logger{40} - %msg%n</pattern>
		</encoder>

		<rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<fileNamePattern><<app-tile-log-dir>>/<<app-tile-app-id>>-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
			<maxFileSize>50MB</maxFileSize>
			<maxHistory>20</maxHistory>
			<totalSizeCap>500MB</totalSizeCap>
			<cleanHistoryOnStart>true</cleanHistoryOnStart>
		</rollingPolicy>
	</appender>

	<appender name="access" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file><<app-tile-log-dir>>/access.log</file>
		<encoder>
			<pattern>%d [%thread] %-5level %-50logger{40} - %msg%n</pattern>
		</encoder>

		<rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<fileNamePattern><<app-tile-log-dir>>/access-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
			<maxFileSize>50MB</maxFileSize>
			<maxHistory>20</maxHistory>
			<totalSizeCap>500MB</totalSizeCap>
			<cleanHistoryOnStart>true</cleanHistoryOnStart>
		</rollingPolicy>
	</appender>

	<root level="INFO">
		<appender-ref ref="application" />
	</root>

	<logger name="org.springframework.web.filter.CommonsRequestLoggingFilter" level="DEBUG" additivity="false">
		<appender-ref ref="access" />
	</logger>
</configuration>
